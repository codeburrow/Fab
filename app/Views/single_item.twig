{% extends "master.twig" %}

{% block title %} Fab - Contact {% endblock title %}

{% block content %}

    <div class="main-wrapp single-item-wrap">
        <div class="container">

            {% if items.0.name is not null %}
                <h2 style="text-align: center; margin-bottom: 30px;"> {{ items.0.name }}</h2>
                {% if items.0.projectDescription is not null %}
                    <h6 style="text-align: center; margin-bottom: 50px;">{{ items.0.projectDescription }}</h6>
                {% endif %}
            {% endif %}

            {% for item in items %}
                <div class="padd-80" style="float: none">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="swiper-slide" style="text-align: center; float: none;">
                                <img src="/images/{{ item.image|e }}" alt="(Image of the Item)" style="width: auto; height: auto;">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="padd-80 fl" style="text-align: center">
                    <p>
                        <span>{{ item.description|e }}</span>
                    </p>
                </div>
            {% endfor %}

            <div class="project-nav">
                <div class="row">
                    <div class="col-md-12">
                        <div class="left-arrow-nav">
                            <a href="/portfolio/{{ previousProject.urlName }}"><span>Previous Project</span></a>
                        </div>
                        <div class="right-arrow-nav">
                            <a href="/portfolio/{{ nextProject.urlName }}"><span>Next Project</span></a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock content %}