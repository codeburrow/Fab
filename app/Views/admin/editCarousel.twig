{% extends "master.twig" %}


{% block content %}


    <div class="right_col" role="main">

        {# Add New Item Form #}
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="dashboard_graph">

                    <div class="row x_title">
                        <div class="col-md-6">
                            <h3>Add New Item
                                <small>to the portfolio page</small>
                            </h3>
                        </div>
                    </div>



                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_content">
                            {% if success == true %}
                                <h1 style="color: forestgreen;">{{ flashMessage }}</h1>
                            {% else %}
                                <h1 style="color: tomato;">{{ flashMessage }}</h1>
                            {% endif %}
                            <br/>

                            <form method="post" action="/admin/dashboard/car" id="rearrangeCarousel" data-parsley-validate
                                  class="form-horizontal form-label-left" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="carousel">Carousel
                                    </label>
                                    <ul id="carousel" class="sortable connectedSortable test">

                                        {% for image in carouselImages %}
                                            <li>
                                                <img src="/images/{{ image.name }}" alt="" style="width: 100%; height: 100%;" id="{{ image.id }}"/>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="gallery">Gallery
                                    </label>
                                    <ul id="gallery" class="sortable connectedSortable">
                                        {% for image in gallery %}
                                            <li>
                                                <img src="/images/{{ image.name }}" alt="" style="width: 100%; height: 100%; " id="{{ image.id }}"/>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-danger">Cancel</button>
                                        {#<button type="submit" class="btn btn-success" id="updateCarousel" name="updateCarousel">Update</button>#}
                                        <input type="submit" id="updateCarousel" name="updateCarousel" value="Update Carousel">
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

    </div>

{% endblock content %}

{% block scripts %}
<script type="text/javascript" src="/js/adminCarousel.js"></script>
{% endblock scripts %}