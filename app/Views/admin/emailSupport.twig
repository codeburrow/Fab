{% extends "master.twig" %}

{% block content %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Contact Support
                        <small> via email</small>
                    </h3>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Fill in the fields below.</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <form class="">
                                <div class="form-group">
                                    <label for="email" class="control-label">Email:</label>
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Your email..">
                                </div>
                                <div class="form-group">
                                    <label for="mobile" class="control-label">Phone:</label>
                                    <input type="number" class="form-control" name="mobile" id="mobile" placeholder="Your mobile number..">
                                </div>
                                <div class="form-group">
                                    <label for="subject" class="control-label">Subject:</label>
                                        <input type="subject" class="form-control" name="subject" id="subject"
                                               placeholder="Subject of email..">
                                </div>
                                <div class="form-group">
                                    <label for="message" class="control-label">Message:</label>
                                        <textarea class="form-control" rows="5" name="message" id="message" placeholder="Your message.."></textarea>
                                </div>
                        <div class="form-group">
                            <div class="">
                                <button type="submit" class="btn btn-block btn-success">Send Email</button>
                            </div>
                        </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>



{% endblock content %}